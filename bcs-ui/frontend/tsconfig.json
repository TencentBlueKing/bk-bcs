{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@open/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "outDir": "./dist",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*.js", "./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.vue"]
}
