# EditorConfig is awesome: http://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
max_line_length = off
trim_trailing_whitespace = true

[{Makefile, makefile, GNUmakefile}]
indent_style = tab
indent_size = 4

; Golang
[*.go]
indent_style = tab
indent_size = 4