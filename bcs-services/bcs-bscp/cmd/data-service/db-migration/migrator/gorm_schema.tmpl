package migrations

import (
	"time"

	"gorm.io/gorm"

	"bscp.io/cmd/data-service/db-migration/migrator"
)

func init() {
    // add current migration to migrator
	migrator.GetMigrator().AddMigration(&migrator.Migration{
		Version: "{{.Version}}",
		Name:    "{{.Version}}_gorm_{{.FileName}}",
		Mode:    migrator.GormMode,
		Up:      mig{{.Version}}Gorm{{.FuncName}}Up,
		Down:    mig{{.Version}}Gorm{{.FuncName}}Down,
	})
}

// mig{{.Version}}Gorm{{.FuncName}}Up for up migration
func mig{{.Version}}Gorm{{.FuncName}}Up(tx *gorm.DB) error {
    // ModelExample : 模型示例，实际迁移DB时，需按实际情况进行修改（包括修改该注释）
    type ModelExample struct {
        ID        uint      `gorm:"type:bigint(1) unsigned not null;primaryKey"`
        Resource  string    `gorm:"type:varchar(50) not null;uniqueIndex:idx_resource"`
        MaxID     uint      `gorm:"type:bigint(1) unsigned not null"`
        UpdatedAt time.Time `gorm:"type:datetime(6) not null"`
    }

    if err := tx.Set("gorm:table_options", "ENGINE=InnoDB CHARSET=utf8mb4").
        AutoMigrate(&ModelExample{}); err != nil {
        return err
    }

    now := time.Now()
    if result := tx.Create([]ModelExample{
        {Resource: "table1", MaxID: 0, UpdatedAt: now},
        {Resource: "table2", MaxID: 0, UpdatedAt: now},
    }); result.Error != nil {
        return result.Error
    }

    return nil

}

// mig{{.Version}}Gorm{{.FuncName}}Down for down migration
func mig{{.Version}}Gorm{{.FuncName}}Down(tx *gorm.DB) error {
	if err := tx.Migrator().DropTable("model_example"); err != nil {
		return err
	}

	return nil
}
